{
	"extends": [
		"airbnb",
		"prettier",
		"prettier/react",
		"plugin:react/recommended",
		"plugin:import-name/recommended",
		"plugin:react-hooks/recommended"
	],
	"rules": {
		"react/display-name": 0,
		"object-curly-spacing": ["error", "always"],
		"key-spacing": [
			"error",
			{
				"multiLine": {
					"beforeColon": false,
					"afterColon": true
				}
			}
		],
		"react-hooks/rules-of-hooks": "error",
		"no-inline-styles/no-inline-styles": 2,
		"semi": [2, "always"],
		"arrow-parens": ["error", "as-needed"],
		"import/order": [
			"error",
			{
				"newlines-between": "always-and-inside-groups",
				"groups": [
					["builtin", "external"],
					["internal", "index", "sibling", "parent", "object"]
				]
			}
		],
		"class-methods-use-this": 0,
		"import/imports-first": 0,
		"import/newline-after-import": 2,
		"no-multiple-empty-lines": ["error", { "max": 1, "maxEOF": 0, "maxBOF": 0 }],
		"import/no-dynamic-require": 0,
		"import/no-extraneous-dependencies": 0,
		"import/no-named-as-default": 0,
		"import/no-unresolved": 2,
		"import/no-webpack-loader-syntax": 0,
		"jsx-a11y/aria-props": 2,
		"jsx-a11y/heading-has-content": 0,
		"jsx-a11y/label-has-associated-control": [
			2,
			{
				"controlComponents": ["Input"]
			}
		],
		"jsx-a11y/label-has-for": 0,
		"jsx-a11y/mouse-events-have-key-events": 2,
		"jsx-a11y/role-has-required-aria-props": 2,
		"jsx-a11y/role-supports-aria-props": 2,
		"newline-per-chained-call": 0,
		"no-confusing-arrow": 0,
		"prefer-template": 2,
		"react/jsx-closing-tag-location": 0,
		"react/forbid-prop-types": 0,
		"react/jsx-first-prop-new-line": [2, "multiline"],
		"react/jsx-no-target-blank": 0,
		"react/jsx-uses-vars": 2,
		"react/require-default-props": 0,
		"react/require-extension": 0,
		"react/self-closing-comp": 0,
		"react/sort-comp": 0,
		"redux-saga/no-yield-in-race": 2,
		"redux-saga/yield-effects": 2,
		"require-yield": 0,
		"no-underscore-dangle": [
			"off",
			{
				"allow": ["_id", "_doc", "__REDUX_DEVTOOLS_EXTENSION_COMPOSE__", "_coordinates"]
			}
		],
		"comma-dangle": [
			"error",
			{
				"arrays": "always-multiline",
				"objects": "always-multiline",
				"imports": "always-multiline",
				"exports": "always-multiline",
				"functions": "ignore"
			}
		],
		"no-restricted-properties": "off",
		"no-param-reassign": [
			"error",
			{
				"props": true,
				"ignorePropertyModificationsFor": ["draft", "state", "draftState"]
			}
		],
		"operator-linebreak": "off",
		"strict": ["error", "global"],
		"react/jsx-filename-extension": [
			1,
			{
				"extensions": [".js", ".jsx"]
			}
		],
		"react/prop-types": [0],
		"react/destructuring-assignment": ["off"],
		"no-unused-vars": [
			"error",
			{
				"vars": "all",
				"args": "none",
				"ignoreRestSiblings": false
			}
		],
		"react/jsx-props-no-spreading": [
			"off",
			{
				"custom": "ignore"
			}
		],
		"import/prefer-default-export": "off",
		"no-console": [
			"error",
			{
				"allow": ["error"]
			}
		],
		"react/static-property-placement": [
			"error",
			"property assignment",
			{
				"contextType": "static public field",
				"displayName": "static public field"
			}
		],
		"import-name/default-import-name": [
			"error",
			{
				"lodash": "_",
				"prop-types": "PropTypes"
			}
		],
		"jsx-quotes": ["error", "prefer-double"]
	},
	"overrides": [
		{
			"files": ["*.js"],
			"globals": {
				"moment": true,
				"document": true,
				"window": true,
				"localStorage": true
			}
		}
	],
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true,
			"modules": true,
			"experimentalObjectRestSpread": true
		}
	},
	"settings": {
		"import/resolver": {
			"alias": [
				["@app", "./src/"],
				["@public", "./public/"]
			]
		}
	},
	"parser": "babel-eslint",
	"plugins": [
		"prettier",
		"redux-saga",
		"react",
		"jsx-a11y",
		"eslint-plugin-no-inline-styles",
		"react-hooks"
	],
	"env": {
		"jest": true,
		"browser": true,
		"node": true,
		"es6": true
	}
}
